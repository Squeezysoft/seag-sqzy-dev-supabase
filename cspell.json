{
  "version": "0.2",
  "language": "en",
  "ignorePaths": [
    "node_modules",
    ".git"
  ],
  "allowCompoundWords": true,
  "dictionaryDefinitions": [
    {
      "name": "customWords",
      "path": "./custom-words.txt"
    }
  ],
  "dictionaries": [
    "customWords"
  ],
  "ignoreRegExpList": [
    "\\b[A-Z]{2,}\\b" // Ignore all uppercase words
  ],
  "ignoreWords": [
    "cspell",
    "json",
    "config",
    "supabase"
  ]
}
